# Environment Variables for King-Jawir Project
# This file contains all environment variables used in the application.
# Copy this file to .env and fill in the actual values.

# Server Ports
API_PORT=4101  # Port for the API server
WEB_PORT=4102  # Port for the web application

# General Secrets
SECRET="your_secret_here"  # General secret key
JWT_SECRET="your_jwt_secret_here"  # Secret key for JWT tokens (min 32 characters)
JWT_REFRESH_SECRET="your_refresh_secret_here"  # Secret key for JWT refresh tokens

# NextAuth Configuration (for Next.js app)
NEXTAUTH_SECRET="your_nextauth_secret_here"  # Secret for NextAuth.js (min 32 chars)
NEXTAUTH_URL="https://yourdomain.com"  # URL of your Next.js application
AUTH_TRUST_HOST="https://yourdomain.com"  # Trusted host for authentication
AUTH_GOOGLE_ID="your_google_oauth_id.apps.googleusercontent.com"  # Google OAuth for NextAuth
AUTH_GOOGLE_SECRET="your_google_oauth_secret"  # Google OAuth secret for NextAuth

# Firebase Configuration (Public - exposed to client)
NEXT_PUBLIC_FIREBASE_API_KEY="your_firebase_api_key"  # Firebase API key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"  # Firebase auth domain
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"  # Firebase project ID
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"  # Firebase storage bucket
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="123456789"  # Firebase messaging sender ID
NEXT_PUBLIC_FIREBASE_APP_ID="1:123456789:web:abcdef123456"  # Firebase app ID
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID="G-XXXXXXXXXX"  # Firebase measurement ID for analytics

# Google OAuth Configuration
# Get these from Google Cloud Console
GOOGLE_OAUTH_CLIENT_ID="your_google_oauth_client_id.apps.googleusercontent.com"  # Google OAuth client ID
GOOGLE_OAUTH_CLIENT_SECRET="your_google_oauth_client_secret"  # Google OAuth client secret
GOOGLE_REDIRECT_URI="http://localhost:4101/auth/google/callback"  # Callback URL for Google OAuth

# External Services
SUPABASE_URL="https://your-supabase-url.supabase.co"  # Supabase URL
GEMINI_API_KEY="your_gemini_api_key"  # API key for Google Gemini AI

# Public URLs for Services
NEXT_PUBLIC_KOMIK="http://localhost:3090"  # URL for komik service
NEXT_PUBLIC_ANIME="http://localhost:3018"  # URL for anime service
# NEXT_PUBLIC_BASE_URL="http://localhost:4090"  # Base URL for the application (commented out)

# Database Configuration
# Prisma uses DATABASE_URL from .env file
# Supports MySQL, PostgreSQL, and MongoDB
# Examples:
# MySQL: "mysql://username:password@host:port/database"
# PostgreSQL: "postgresql://username:password@host:port/database"
# MongoDB: "mongodb+srv://username:password@cluster.mongodb.net/database"
DATABASE_URL="mysql://username:password@127.0.0.1:3306/database"

# Redis Configuration
REDIS_HOST="127.0.0.1"  # Redis host
REDIS_PORT=6379  # Redis port
REDIS_PASSWORD=""  # Redis password (leave empty if no password)

# MinIO/S3 Configuration
MINIO_ENDPOINT="https://your-minio-endpoint.com"  # MinIO endpoint URL
MINIO_BUCKET_NAME="your-bucket"  # MinIO bucket name
MINIO_ACCESS_KEY="your_access_key"  # MinIO access key
MINIO_SECRET_KEY="your_secret_key"  # MinIO secret key
MINIO_SECURE=true  # Whether to use HTTPS (true/false)
MINIO_REGION="us-east-1"  # MinIO region
MINIO_PUBLIC_URL="https://your-files-domain.com"  # Public URL for serving files
MINIO_AVATAR_PREFIX="avatars"  # Prefix for avatar files in the bucket

# OpenAI/NVIDIA API Configuration
OPENAI_API_KEY="your_openai_api_key"  # API key for OpenAI or NVIDIA
OPENAI_API_BASE="https://api.kolosal.ai/v1/chat/completions"  # Base URL for OpenAI API
OPENAI_MODEL="GLM 4.6"  # Model to use for OpenAI API

# Email/SMTP Configuration
# For Gmail: Use App Password (not your regular password)
# Generate at: https://myaccount.google.com/apppasswords
SMTP_HOST="smtp.gmail.com"  # SMTP host (Gmail: smtp.gmail.com)
SMTP_PORT=465  # SMTP port (465 for SSL, 587 for TLS)
SMTP_USER="your_email@gmail.com"  # SMTP username/email
SMTP_PASS="your_app_password"  # SMTP password (Gmail: use App Password)
SMTP_FROM="Your App Name <your_email@gmail.com>"  # From email with name

# Application URLs
APP_URL="https://yourdomain.com"  # Base URL of the application (used for email verification links)
FRONTEND_URL="http://localhost:4102"  # Frontend URL (for development)

# Komik Service
KOMIK_BASE_URL="https://komikindo.ch"  # Base URL for komik service

# Environment
NODE_ENV="development"  # Environment mode (development/production)